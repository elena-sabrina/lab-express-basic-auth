<!DOCTYPE html>
<html>
  <head>
    <title>Lab Express Basic Authentication</title>
    <link rel='stylesheet' href='/styles/main.css' />
  </head>
  <body>
    <nav>
      <a href="/">Home</a>
      {{#if user}}
      <a href="/profile">{{user.name}}</a>
      <form method="POST" action="/authentication/sign-out">
          <button>Sign Out</button>
      </form>
      {{else}}
      <a href="/authentication/sign-up">Sign-up</a>
      <a href="/authentication/sign-in">Sign-in</a>
      {{/if}}
    </nav>
    {{{body}}}
  </body>
</html>
